<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="zclaimProcessing.controller.NewClaimSelectGroup" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:uxap="sap.uxap"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<core:Fragment fragmentName="zclaimProcessing.view.fragments.ToolHeader" type="XML"/>
	<uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true">
		<uxap:sections>
			<uxap:ObjectPageSection title="New Claim">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title=" ">
						<uxap:blocks>
							<VBox>
								<MessageStrip id="idNewClaimMsgStrp" text="" showIcon="true" showCloseButton="false" class="sapUiMediumMarginBottom" visible="false"></MessageStrip>
								<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="4" labelSpanL="4" labelSpanM="3"
									labelSpanS="12" adjustLabelSpan="false" emptySpanXL="2" emptySpanL="2" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
									singleContainerFullSize="false">
									<f:content>
										<core:Title text="Please Select a Claim Type Group and Request Type for your Claim"/>
										<Label text="Claim Type Group" textAlign="Begin" textDirection="LTR"/>
										<Select id="idClaimType"  items="{LocalDataModel>/ClaimGroupData}">
											<items>
												<core:Item text="{LocalDataModel>ClaimGroupDes}" key="{LocalDataModel>ClaimGroupDes}"/>
											
											</items>
										</Select>
										<Label text="Request Type" textAlign="Begin"/>
										<RadioButtonGroup selectedIndex="0" columns="2" id="idRequestType" select="onSelectRequestType01">
											<buttons>
												<RadioButton text="Claim"/>
												<RadioButton text=" Authorization"/>
											</buttons>
										</RadioButtonGroup>
										<core:Title text=""/>
										<Button text="Next" type="Emphasized" press="onClaimAuthorization"/>
										<Button text="Cancel" type="Reject" press="onPressCancel"/>
									</f:content>
								</f:SimpleForm>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>