<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin clFormTitleGap" busy="{LocalDataModel>/oSavePartIndicator}">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="{LocalDataModel>/WarrantyClaimNumber}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="{i18n>TCIClaim}"/>
					<Text text="{HeadSetData>/NumberOfWarrantyClaim}"/>
					<Label text="{i18n>VIN}">
						<layoutData>
							<l:GridData span="XL3 L3"/>
						</layoutData>
					</Label>
					<Text text="{HeadSetData>/ExternalObjectNumber}" wrapping="false"/>
					<core:Title text=""/>
					<Label text="{i18n>DlrClaim}"/>
					<Text text="{HeadSetData>/ExternalNumberOfClaim}"/>
					<Label text="{i18n>OFP}">
						<layoutData>
							<l:GridData span="XL3 L4"/>
						</layoutData>
					</Label>
					<Text text="{HeadSetData>/OFP}"/>
					<core:Title text=""/>
					<Label text="{i18n>RO}"/>
					<Text text="{HeadSetData>/RepairOrderNumberExternal}"/>
					<Label text="{i18n>Op}"/>
					<Text text="{HeadSetData>/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="{i18n>RepairDate}"/>
					<Text text="{path:'HeadSetData>/RepairDate', formatter:'zclaimProcessing.utils.formatter.fnDateFormat'}"/>
					<Label text="{i18n>RegDate}"/>
					<Text text="{path:'LocalDataModel>/DataVinDetails/RegDate', formatter:'zclaimProcessing.utils.formatter.fnDateFormat'}"/>
					<core:Title text=""/>
					<Label text="{i18n>Odometer}" textAlign="End">
						<layoutData>
							<l:GridData span="XL5 L5 M6 "/>
						</layoutData>
					</Label>
					<Text text="{path:'HeadSetData>/Odometer', formatter:'zclaimProcessing.utils.formatter.fnFormatNum'}" textAlign="End">
						<layoutData>
							<l:GridData span="XL4 L4 M6 "/>
						</layoutData>
					</Text>
					<Text text="{LocalDataModel>/MsrUnit}" visible="{DateModel>/OdometerReqMan}">
						<layoutData>
							<l:GridData span="XL3 L3 M3 "/>
						</layoutData>
					</Text>
					<Label text="{i18n>Elapse}"/>
					<Text text="{LocalDataModel>/VehicleMonths} {i18n>Months}"/>
					<core:Title text=""/>
					<Label text="{i18n>Type}"/>
					<Text text="{HeadSetData>/WarrantyClaimType}"/>
					<Label text="{i18n>Status}"/>
					<Text text="{HeadSetData>/DecisionCode}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="{i18n>PaintDetails}" labelSpanXL="4"
			labelSpanL="4" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="5" columnsL="5"
			columnsM="3">
			<f:content>
				<HBox justifyContent="Start">
					<Button text="{i18n>AddPaintLine}" class="sapUiSmallMarginEnd" type="Emphasized" press="onPressAddPaint" enabled="{DateModel>/oFormEdit}"></Button>
					<Button text="{i18n>DeletePaintLine}" type="Reject" press="onPressDeletePaint" enabled="{DateModel>/oFormEdit}"></Button>
				</HBox>
				<HBox justifyContent="End">
					<Button text="{i18n>SaveClaim}" type="Emphasized" press="onPressSavePaint" enabled="{DateModel>/paintLine}"></Button>
				</HBox>
			</f:content>
		</f:SimpleForm>
		<l:Grid containerQuery="true" defaultSpan="XL6 L7 M12 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Start" width="100%">
				<f:SimpleForm editable="true" width="100%" class="sapUiResponsiveMargin ClsubHeadingLineHeight" layout="ResponsiveGridLayout" title=""
					labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4"
					columnsL="4" columnsM="4">
					<f:content>
						<core:Title text=""/>
						<Label text="{i18n>Line}" textAlign="Left"/>
						<Text text=""/>
						<core:Title text=""/>
						<Label text="{i18n>PositionCode}" textAlign="Left"/>
						<!--<ComboBox required="true" items="{path:'LocalDataModel>/oPaintList'}" change="onSelectPositionCode"-->
						<!--	selectedKey="{PaintDataModel>/PaintPositionCode}"-->
						<!--	value="{path:'PaintDataModel>/PaintPositionCode'}"-->
						<!--	enabled="{DateModel>/paintLine}" filterSecondaryValues="true" showSecondaryValues="true">-->
						<!--	<core:ListItem text="{path:'LocalDataModel>J_3GKATNRC'}"-->
						<!--		key="{LocalDataModel>J_3GKATNRC}" additionalText="{LocalDataModel>LTEXT}"/>-->
						<!--</ComboBox>-->
						<Input type="Text" textFormatMode="Value" placeholder="{i18n>EnterPositionCode}" showSuggestion="false" showValueHelp="true"
							value="{PaintDataModel>/PaintPositionCode}" valueHelpRequest="handleValueHelpPaint" suggestionItems="{LocalDataModel>/oPaintList}"
							suggestionItemSelected="onSelectPositionPaintCode" enabled="{DateModel>/paintLine}">
							<suggestionItems>
								<core:ListItem key="{LocalDataModel>J_3GKATNRC}" text="{LocalDataModel>J_3GKATNRC}"/>
							</suggestionItems>
						</Input>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="{i18n>SavePaint}" type="Emphasized" press="onPressSavePaint" enabled="{DateModel>/paintLine}">
							<!--<layoutData>-->
							<!--	<l:GridData span="XL10 L10 "/>-->
							<!--</layoutData>-->
						</Button>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="{i18n>Clear}" type="Default" press="onPressCancelPaint" enabled="{DateModel>/paintLine}">
							<layoutData>
								<l:GridData span="XL7 L8"/>
							</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<l:Grid containerQuery="true" defaultSpan="XL6 L7 M12 S12">
			<Table id="idPaintTable" mode="SingleSelectLeft" items="{path: 'LocalDataModel>/PaintPricingDataModel'}" growing="true" growingThreshold="5"
				noDataText="No Data" showNoData="true">
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Begin"><Text text="{i18n>Line}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Begin"><Text text="{i18n>MainOp}"/></Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Text text="{i18n>PositionCode}"/></Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{LocalDataModel>posnr}" wrapping="true" textAlign="Center"/>
							<RadioButton groupName="GroupC" enabled="{DateModel>/oFormEdit}" select="onSelectOFPPrint"/>
							<Text text="{path:'LocalDataModel>ItemKey', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'}" wrapping="true"
								textAlign="Center"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</l:Grid>
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
			<Button class="sapUiTinyMarginBeginEnd" type="Back" press="onStep05Back" text="{i18n>Back}"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep05Next" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>