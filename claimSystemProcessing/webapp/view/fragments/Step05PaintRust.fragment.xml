<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin clFormTitleGap">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="TCI Claim Number: {LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="TCI Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}"/>
					<Label text="VIN"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalObjectNumber}"/>
					<core:Title text=""/>
					<Label text="Dlr. Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalNumberOfClaim}"/>
					<Label text="OFP"/>
					<Text text="{LocalDataModel>/ClaimDetails/OFP}"/>
					<core:Title text=""/>
					<Label text="RO #."/>
					<Text text="{LocalDataModel>/ClaimDetails/RepairOrderNumberExternal}"/>
					<Label text="Op #."/>
					<Text text="{LocalDataModel>/ClaimDetails/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="Repair Date"/>
					<Text
						text="{path:'LocalDataModel>/ClaimDetails/RepairDate', type: 'sap.ui.model.type.Date', constraints: {displayFormat: 'Date' }, formatOptions: { style: 'medium', strictParsing: true , UTC: true}}"/>
					<Label text="Reg. Date"/>
					<Text text="{path:'LocalDataModel>/ClaimDetails/RegDate'}"/>
					<core:Title text=""/>
					<Label text="Odometer"/>
					<Text text="{LocalDataModel>/ClaimDetails/OdometerReading}"/>
					<Label text="Elapse"/>
					<Text text="{LocalDataModel>/ClaimDetails/ElapsedMonths}"/>
					<core:Title text=""/>
					<Label text="Type"/>
					<Text text="{LocalDataModel>/ClaimDetails/WarrantyClaimType}"/>
					<Label text="Status"/>
					<Text text="{LocalDataModel>/ClaimDetails/ProcessingStatusOfWarrantyClm}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="" labelSpanXL="7" labelSpanL="7"
			labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="4">
			<f:content>
				<core:Title text=""/>
				<Button text="Add Paint LIne" type="Emphasized" press="onPressAddPaint" enabled="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<!--<Button text="Update Paint Line" press="onPressUpdatePaint">-->
				<!--	<layoutData>-->
				<!--		<l:GridData span="XL8 L8 "/>-->
				<!--	</layoutData>-->
				<!--</Button>-->
				<core:Title text=""/>
				<Button text="Delete Paint Line" type="Reject" press="onPressDeletePaint" enabled="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Save Claim" type="Emphasized" press="onPressSavePaint" enabled="{DateModel>/paintLine}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
		<l:Grid containerQuery="true" defaultSpan="XL11 L10 M12 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Center">
				<f:SimpleForm editable="true" width="100%" class="sapUiResponsiveMargin ClsubHeadingLineHeight" layout="ResponsiveGridLayout" title=""
					labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4"
					columnsL="4" columnsM="4">
					<f:content>
						<core:Title text=""/>
						<Label text="Line #*" textAlign="Left"/>
						<Text text=""/>
						<core:Title text=""/>
						<Label text="Position Code" textAlign="Left"/>
						<!--<ComboBox required="true" items="{path:'LocalDataModel>/oPaintList'}" change="onSelectPositionCode"-->
						<!--	selectedKey="{PaintDataModel>/PaintPositionCode}" enabled="{DateModel>/paintLine}">-->
						<!--	<core:Item text="{path:'LocalDataModel>PaintPositionCode', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'} - {LocalDataModel>PaintPositionDescription}"-->
						<!--		key="{LocalDataModel>PaintPositionCode}"/>-->
						<!--</ComboBox>-->
						<ComboBox required="true" items="{path:'LocalDataModel>/oPaintList'}" change="onSelectPositionCode"
							selectedKey="{PaintDataModel>/PaintPositionCode}"
							value="{path:'PaintDataModel>/PaintPositionCode', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'}"
							enabled="{DateModel>/paintLine}" filterSecondaryValues="true" showSecondaryValues="true">
							<core:ListItem text="{path:'LocalDataModel>J_3GKATNRC', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'}"
								key="{LocalDataModel>J_3GKATNRC}" additionalText="{LocalDataModel>LTEXT}"/>
						</ComboBox>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Save Paint" type="Emphasized" press="onPressSavePaint" enabled="{DateModel>/paintLine}">
							<!--<layoutData>-->
							<!--	<l:GridData span="XL10 L10 "/>-->
							<!--</layoutData>-->
						</Button>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Cancel" type="Transparent" press="onPressSavePaint">
							<!--<layoutData>-->
							<!--	<l:GridData span="XL9 L9 "/>-->
							<!--</layoutData>-->
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<Table id="idPaintTable" mode="SingleSelectLeft" items="{path: 'LocalDataModel>/PaintPricingDataModel'}" growing="true" growingThreshold="5"
			noDataText="No Data" showNoData="true">
			<columns>
				<Column><Text text="Line #"/></Column>
				<Column><Text text="Position Code"/></Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{LocalDataModel>posnr}" wrapping="false" textAlign="Center"/>
						<Text text="{path:'LocalDataModel>ItemKey', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'}" wrapping="false"
							textAlign="Center"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
