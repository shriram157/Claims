		<!--				<Label text="Position Code" textAlign="Center" width="100%"/>-->
		<!--			</table:multiLabels>-->
		<!--			<table:template>-->
		<!--				<Text text="{path:'LocalDataModel>ItemKey', formatter: 'zclaimProcessing.utils.formatter.fnFormatPositionCode'}" wrapping="true" textAlign="Center"/>-->
		<!--			</table:template>-->
		<!--		</table:Column>-->
		<!--	</table:columns>-->
		<!--</table:Table>-->
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
			<Button class="sapUiTinyMarginBeginEnd" type="Back" press="onStep05Back" text="{i18n>Back}"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep05Next" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>