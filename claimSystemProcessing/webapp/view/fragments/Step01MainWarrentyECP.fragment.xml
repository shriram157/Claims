<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin clFormTitleGap">
		<Panel width="auto" class="sapUiSmallMarginBottom" accessibleRole="Region">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="TCI Claim Number: {HeadSetData>/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3">
				<f:content>
					<core:Title text=""/>
					<Label text="Claim Type"/>
					<ComboBox required="true" items="{path:'LocalDataModel>/ClaimGroupSet'}" change="onSelectClaimTpe"
						selectedKey="{HeadSetData>/ClaimType}" enabled="{DateModel>/claimTypeEn}">
						<core:Item text="{LocalDataModel>ALMClaimType} - {LocalDataModel>ALMClaimTypeDes}" key="{LocalDataModel>ALMClaimType}"/>
					</ComboBox>
					<core:Title text=""/>
					<Label text="First Submission Date"/>
					<Text
						text="{ path: 'HeadSetData>/ReferenceDate', type : 'sap.ui.model.type.Date', formatOptions : { source: { pattern: 'dd-MM-yyyy' }, pattern: 'dd-MM-yyyy' }, constraints : { minimum : '01-01-1990' } }"/>
					<Label text="Claim Age"/>
					<Text text="{HeadSetData>/ClaimAge}"/>
					<Label text="Last Modified by"/>
					<Text text="{HeadSetData>/NameOfPersonRespWhoChangedObj}"/>
					<core:Title text=""/>
					<Label text="Last Submission Date"/>
					<Text
						text="{ path: 'HeadSetData>/DateOfApplication', type: 'sap.ui.model.type.Date', constraints: {displayFormat: 'Date' }, formatOptions: { style: 'medium', strictParsing: true , UTC: true}}"/>
					<Label text="Final Processed Date"/>
					<Text
						text="{ path: 'HeadSetData>/FinalProcdDate', type: 'sap.ui.model.type.Date', constraints: {displayFormat: 'Date' }, formatOptions: { style: 'medium', strictParsing: true , UTC: true} }"/>
				</f:content>
			</f:SimpleForm>
			<HBox justifyContent="End">
				<Button text="Save Claim" class="sapUiSmallMarginEnd" type="Emphasized" press="onSaveClaim" visible="{DateModel>/saveClaimSt}">
					<layoutData>
						<l:GridData span="XL3 L4 M6 S12"/>
					</layoutData>
				</Button>
				<Button text="Edit" class="sapUiSmallMarginEnd" type="Emphasized" press="onEditClaim" visible="{DateModel>/claimEditSt}">
					<layoutData>
						<l:GridData span="XL3 L4 M6 S12"/>
					</layoutData>
				</Button>
				<Button text="Save Claim" class="sapUiSmallMarginEnd" type="Emphasized" press="onUpdateClaim" visible="{DateModel>/updateClaimSt}">
					<layoutData>
						<l:GridData span="XL3 L4 M6 S12"/>
					</layoutData>
				</Button>
				<Button text="Copy to Claim" type="Default" press="onCopyClaim">
					<layoutData>
						<l:GridData span="XL4 L4 M6 S12"/>
					</layoutData>
				</Button>
			</HBox>
		</Panel>
		<f:SimpleForm id="idClaimMainForm" editable="" title="Repair Order Information" layout="ResponsiveGridLayout" labelSpanXL="12"
			labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
			columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<Label text="Dealer Name"/>
				<Text text="{HeadSetData>/CustomerFullName}"/>
				<Label text="Dealer Claim"/>
				<Input
					value="{path:'HeadSetData>/ExternalNumberOfClaim', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 40 } }"
					required="true" id="idDealerClaim" editable="{DateModel>/oFormEdit}" />
				<core:Title text=""/>
				<Label text="Repair Date"/>
				<DatePicker required="true" value="{path:'HeadSetData>/RepairDate',type : 'sap.ui.model.type.Date'}" editable="{DateModel>/oFormEdit}"/>
				<Label text="Dealer Contact"/>
				<Input required="true"
					value="{path:'HeadSetData>/DealerContact', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 30 }}"
					id="idDealerContact" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="Repair Order"/>
				<Input required="true"
					value="{path:'HeadSetData>/RepairOrderNumberExternal', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 10 }}"
					id="idRepairOrder" editable="{DateModel>/oFormEdit}"/>
				<Label text="R.O. Odometer"/>
				<Input value="{path:'HeadSetData>/Odometer', type : 'sap.ui.model.type.String', constraints : { minLength : 2, maxLength : 7 }}"
					required="true" id="idOdometer" editable="{DateModel>/oFormEdit}"/>
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm editable="" id="idVehicleInfo" title="Vehicle Information - Toyota Corola LE CVT 2018" layout="ResponsiveGridLayout"
			labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<RadioButtonGroup selectedIndex="0" columns="2" id="idRequestType" select="onSelectRequestType" editable="{DateModel>/oFormEdit}">
					<buttons>
						<RadioButton groupName="C" text="VIN"/>
						<RadioButton groupName="C" text=" Non Vehicle"/>
					</buttons>
				</RadioButtonGroup>
				<Input
					value="{path:'HeadSetData>/ExternalObjectNumber', type : 'sap.ui.model.type.String', constraints : { minLength : 16, maxLength : 17 }}"
					required="true" id="idVinNum" change="onEnterVIN" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="Reg. Date"/>
				<Text text="{HeadSetData>/RegDate}"/>
				<Label text="Vehicle Age"/>
				<Text text="" id="idVehicleAge"/>
				<core:Title text=""/>
				<Label text="Foreign VIN"/>
				<Text text="{HeadSetData>/ForeignVINIndicator}" id="idForeignVin"/>
				<Button icon="sap-icon://message-warning" type="Transparent" press="onPressForeignVin"/>
				<Label text="Written-Off"/>
				<Text text="{HeadSetData>/WrittenOffCode}" id="idWrittenoff"/>
				<Button icon="sap-icon://message-warning" type="Transparent" press="onPressWrittenOff"/>
				<Label text="Special VIN Review"/>
				<Text text="{HeadSetData>/SpecialVINReview}" id="idSpecialVin"/>
				<Button icon="sap-icon://message-warning" type="Transparent" press="onPressSpecialVin"/>
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm id="idpart01Form" editable="{DateModel>/oFormEdit}" title="Repair Details" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12"
			labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3"
			columnsL="3" columnsM="3" singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<Label text="OFP"/>
				<Input value="{path:'HeadSetData>/OFP'}" editable="{DateModel>/oFormEdit}"/>
				<Label text="Main Op"/>
				<Input value="{path:'HeadSetData>/MainOpsCode'}" editable="{DateModel>/oFormEdit}"/>
				<Label text="Battery Test Code"/>
				<Input value="{HeadSetData>/BatteryTestCode}" editable="{DateModel>/oFormEdit}"/>
				<Label text="Condition"/>
				<TextArea required="true" editable="{DateModel>/oFormEdit}"
					value="{path:'HeadSetData>/ZCondition', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 100 }}"></TextArea>
				<core:Title text=""/>
				<Label text="OFP Description"/>
				<Text text=" "/>
				<Label text="Main Op Description"/>
				<Text text=" "/>
				<Label text="Field Action Code"/>
				<Input value="{HeadSetData>/FieldActionReference}" editable="{DateModel>/oFormEdit}"/>
				<Label text="Cause"/>
				<TextArea required="true" editable="{DateModel>/oFormEdit}"
					value="{path:'HeadSetData>/Cause',type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 100 }}"></TextArea>
				<core:Title text=""/>
				<Label text="Applied Coverage"/>
				<Text text="{HeadSetData>/AppliedWarrantyCoverage}"/>
				<Label text="T1 Code"/>
				<Select selectedKey="{HeadSetData>/T1WarrantyCodes}" items="{ path: '/Zt1DescSrchhelpSet' }" enabled="{DateModel>/oFormEdit}" >
					<core:Item key="{T1}" text="{T1} - {T1Text}"/>
				</Select>
				<Label text="T2 Code"/>
				<Select selectedKey="{HeadSetData>/T2WarrantyCodes}" items="{ path: '/Zt2DescSrchhelpSet' }" enabled="{DateModel>/oFormEdit}">
					<core:Item key="{T2}" text="{T2} - {T2Text}"/>
				</Select>
				<Label text="Remedy"/>
				<TextArea required="true" editable="{DateModel>/oFormEdit}"
					value="{path:'HeadSetData>/Remedy', type : 'sap.ui.model.type.String', constraints : { minLength : 3, maxLength : 100 }}"></TextArea>
			</f:content>
		</f:SimpleForm>
		<Button text="View CCR Abbreviations" press="onPressAbbr"/>
		<f:SimpleForm visible="{DateModel>/AcA1}" editable="{DateModel>/oFormEdit}" title="Accessory Installation/Purchase" layout="ResponsiveGridLayout"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<Label text="Install Date"/>
				<DatePicker required="true" value="{path:'HeadSetData>/AccessoryInstallDate',type : 'sap.ui.model.type.Date'}" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="Install Odometer"/>
				<Input value="{path:'HeadSetData>/AccessoryInstallOdometer'}" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm visible="{DateModel>/P1p2}" editable="{DateModel>/oFormEdit}" title="Original/Previous Installation" layout="ResponsiveGridLayout"
			labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0"
			emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<Label text="Previous R.O./Invoice #"/>
				<Input value="{path:'HeadSetData>/PreviousROInvoice'}" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="R.O./Invoice Date"/>
				<DatePicker required="true" value="{path:'HeadSetData>/PreviousROInvoiceDate',type : 'sap.ui.model.type.Date'}" editable="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="R.O. Odometer"/>
				<Input value="{path:'HeadSetData>/PreviousROOdometer'}" editable="{DateModel>/oFormEdit}"/>
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm editable="{DateModel>/oFormEdit}" title="Claim Comments" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<f:content>
				<core:Title text=""/>
				<TextArea height="8rem" value="{HeadSetData>/HeadText}" editable="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 M8 S12"/>
					</layoutData>
				</TextArea>
				<Button text="Add">
					<layoutData>
						<l:GridData span="XL2 L2 M3 S4"/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
	</VBox>
	<VBox>
		<Panel width="auto" class="sapUiSmallMarginBottom" accessibleRole="Region">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="Supporting Documents"/>
				</Toolbar>
			</headerToolbar>
			<content>
				<f:SimpleForm editable="{DateModel>/oFormEdit}" title="" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
					adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
					singleContainerFullSize="false">
					<f:content>
						<UploadCollection change="onUplaodChange" id="UploadSupportingDoc" uploadComplete="onUploadComplete" fileDeleted="onFileDeleted"
							beforeUploadStarts="onBeforeUpload" items="{ path: 'ClaimModel>/items', templateShareable: false }" >
							<toolbar>
								<OverflowToolbar>
									<Breadcrumbs id="breadcrumbsSupportingDoc" currentLocationText="{ClaimModel>/currentLocationText}" links="{ClaimModel>/history}">
										<Link press="onBreadcrumbPress" text="{ClaimModel>fileName}"/>
									</Breadcrumbs>
									<ToolbarSpacer/>
									<UploadCollectionToolbarPlaceholder/>
								</OverflowToolbar>
							</toolbar>
							<items>
								<UploadCollectionItem documentId="{ClaimModel>DOC_ID}" fileName="{ClaimModel>FileName}" mimeType="{ClaimModel>MIMETYPE}"
									thumbnailUrl="{ClaimModel>url}" url="{ClaimModel>URI}" enableEdit="{settings>/enableEdit}" enableDelete="{settings>/enableDelete}"
									visibleDelete="{settings>/visibleDelete}" visibleEdit="{settings>/visibleEdit}"></UploadCollectionItem>
							</items>
						</UploadCollection>
					</f:content>
				</f:SimpleForm>
			</content>
		</Panel>
		<Panel width="auto" class="sapUiSmallMarginBottom" accessibleRole="Region">
			<content>
				<table:Table id="idRCPTable" class="classRCPTable" selectionMode="Single" rows="{path:'LocalDataModel>/ClaimSum'}"
					rowSelectionChange="onNavigate" selectionBehavior="Row" showNoData="true" threshold="4" visibleRowCount="4" enableBusyIndicator="true">
					<table:toolbar>
						<Toolbar>
							<Title id="idClaimWarrenty" text="Claim Amount Summary" level="H2"/>
							<ToolbarSpacer/>
							<!--<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>-->
						</Toolbar>
					</table:toolbar>
					<table:columns autoResizable="true">
						<table:Column width="17rem">
							<table:multiLabels>
								<Label text="(Totals included mark-up and discounts)" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{path:'LocalDataModel>ItemType', formatter: 'zclaimProcessing.utils.formatter.fnFormatText'}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="11rem">
							<table:multiLabels>
								<Label text="Dealer Claimed Amount" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>DealerClaim}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="11rem">
							<table:multiLabels>
								<Label text="TCI Approved Amount" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>TCIAppr}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="11rem">
							<table:multiLabels>
								<Label text="Difference (CAD)" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>Diff}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="8rem" headerSpan="{multiHeaderConfig>/multiheader2}">
							<table:multiLabels>
								<Label text="GST/HST" textAlign="Center" width="100%"/>
								<Label text="Amount" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>GSTHSTAmt}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="8rem">
							<table:multiLabels>
								<Label text="GST/HST"/>
								<Label text="Tax %" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>GSTHSTRate}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="8rem" headerSpan="{multiHeaderConfig>/multiheader2}">
							<table:multiLabels>
								<Label text="PST/QST" textAlign="Center" width="100%"/>
								<Label text="Amount" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>PSTQSTAmt}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="8rem">
							<table:multiLabels>
								<Label text="PST/QST"/>
								<Label text="Tax %" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>PSTQSTRate}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column width="17rem">
							<table:multiLabels>
								<Label text="TCI Approved Amount Including Tax" textAlign="Center" width="100%"/>
							</table:multiLabels>
							<table:template>
								<Text text="{LocalDataModel>TCIApprInclTax}" wrapping="false"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</content>
			<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
				<Button class="sapUiTinyMarginBeginEnd" press="onPressBack" text="{i18n>BackList}" type="Back"/>
				<Button class="sapUiTinyMarginBeginEnd" press="onCancelClaim" text="{i18n>CancelClaim}" type="Reject"/>
				<Button class="sapUiTinyMarginBeginEnd" text="{i18n>Print}"/>
				<Button class="sapUiTinyMarginBeginEnd" press="onStep01Next" enabled="{LocalDataModel>/step01Next}" text="{i18n>Next}" type="Emphasized"/>
			</HBox>
		</Panel>
	</VBox>
</core:FragmentDefinition>