<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="TCI Claim or Authorization Number: {LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="TCI Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}"/>
					<Label text="VIN"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalObjectNumber}"/>
					<core:Title text=""/>
					<Label text="Dlr. Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalNumberOfClaim}"/>
					<Label text="OFP"/>
					<Text text="{LocalDataModel>/ClaimDetails/OFP}"/>
					<core:Title text=""/>
					<Label text="RO #."/>
					<Text text="{LocalDataModel>/ClaimDetails/RepairOrderNumberExternal}"/>
					<Label text="Op #."/>
					<Text text="{LocalDataModel>/ClaimDetails/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="Repair Date"/>
					<Text
						text="{path:'LocalDataModel>/ClaimDetails/RepairDate'}"/>
					<Label text="Reg. Date"/>
					<Text
						text="{path:'LocalDataModel>/ClaimDetails/RegDate'}"/>
					<core:Title text=""/>
					<Label text="Odometer"/>
					<Text text="{LocalDataModel>/ClaimDetails/OdometerReading}"/>
					<Label text="Elapse"/>
					<Text text="{LocalDataModel>/ClaimDetails/ElapsedMonths}"/>
					<core:Title text=""/>
					<Label text="Type"/>
					<Text text="{LocalDataModel>/ClaimDetails/WarrantyClaimType}"/>
					<Label text="Status"/>
					<Text text="{LocalDataModel>/ClaimDetails/ProcessingStatusOfWarrantyClm}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<!--<HBox justifyContent="End" width="100%">-->
			<!--<Button text="Add Part Line" type="Emphasized" press="onPressAddLabour"/>-->
		<!--	<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItemSublet"/>-->
		<!--</HBox>-->
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="" labelSpanXL="7" labelSpanL="7"
			labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="4">
			<f:content>
				<core:Title text=""/>
				<Button text="Add Sublet LIne" type="Emphasized" press="onPressAddSublet">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Update Sublet Line" press="onPressUpdateSublet">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Delete Sublet Line" type="Reject" press="onPressDeleteSublet">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItemSublet" enabled="{DateModel>/subletLine}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
		<l:Grid containerQuery="true" defaultSpan="XL10 L10 M12 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Center">
				<f:SimpleForm editable="true" width="90%" class="sapUiResponsiveMargin ClsubHeadingLineHeight" layout="ResponsiveGridLayout" title="" labelSpanXL="12" labelSpanL="12"
					labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="6">
					<f:content>
						<core:Title text=""/>
						<Label text="Line #*" textAlign="Left"/>
						<Text text=""/>
						<core:Title text=""/>
						<Label text="Sublet Type" textAlign="Left"/>
						
						<ComboBox required="true" items="{path:'/ZC_CLAIM_SUBLET_CODE', type : 'sap.ui.model.type.String'}" change="onSelectPositionCode"
							selectedKey="{SubletDataModel>/SubletCode}" enabled="{DateModel>/subletLine}">
							<core:Item text="{path:'SubletCode'}"
								key="{SubletCode}"/>
						</ComboBox>
						<core:Title text=""/>
						<Label text="Invoice #" textAlign="Left"/>
						<Input value="{SubletDataModel>/InvoiceNo}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Description" textAlign="Left"/>
						<Input value="{SubletDataModel>/description}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Amount" textAlign="Left"/>
						<Input value="{SubletDataModel>/Amount}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Save Sublet" type="Emphasized" press="onPressSaveClaimItemSublet" enabled="{DateModel>/subletLine}">
							<layoutData>
								<l:GridData span="XL10 L10 "/>
							</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm editable="true" class="sapUiResponsiveMargin" layout="ResponsiveGridLayout" title="" labelSpanXL="12" labelSpanL="12"
					labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="4">
					<f:content>
						<core:Title text=""/>
						<Label text="Attachments" textAlign="Left"/>
						<UploadCollection id="UploadSublet" change="onUplaodChange" uploadComplete="onUploadComplete02" fileDeleted="onFileDeleted02"
							visible="{multiHeaderConfig>/uploader}">
							<toolbar>
								<OverflowToolbar>
									<Breadcrumbs id="breadcrumbSublet" currentLocationText="{AttachmentModel>/currentLocationText}" links="{AttachmentModel>/history}">
										<Link press="onBreadcrumbPress" text="{AttachmentModel>name}"/>
									</Breadcrumbs>
									<ToolbarSpacer/>
									<UploadCollectionToolbarPlaceholder/>
								</OverflowToolbar>
							</toolbar>
						</UploadCollection>
						<core:Title text=""/>
						<Label text="# Days" textAlign="Left"/>
						<Input value="{SubletDataModel>/days}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Vehicle Brand" textAlign="Left"/>
						<Select forceSelection="false" selectedKey="{SubletDataModel>/brand}" enabled="{DateModel>/subletLine}">
							<items>
								<core:Item key="Toyota" text="Toyota"/>
								<core:Item key="Lexus" text="Lexus"/>
								<core:Item key="Other" text="Other"/>
							</items>
						</Select>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Cancel" type="Transparent" press="onPressSaveLabour" enabled="{DateModel>/subletLine}">
							<layoutData>
								<l:GridData span="XL9 L9 "/>
							</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<table:Table id="idSubletTable" class="classRCPTable" selectionMode="MultiToggle" rows="{LocalDataModel>/SubletPricingDataModel}" 
			 showNoData="true" threshold="20" enableBusyIndicator="true" visibleRowCount="10">
			<table:columns autoResizable="true">
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Line #" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Sublet Type" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>matnr}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Invoice #" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>InvoiceNo}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Attachment" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Description" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>SubletDescription}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Amount" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>Amount}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Total After Discount" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>TotalAfterDisct}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="TCI Amount Approved" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>TCIApprAmt}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="17rem">
					<table:multiLabels>
						<Label text="Difference" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>DiffAmt}" wrapping="false"/>
					</table:template>
				</table:Column>
				
			</table:columns>
		</table:Table>
		
		<table:Table class="classRCPTable sapUiSmallMarginTop" id="idTableSubletTotal" selectionMode="None" rows="{LocalDataModel>/SubletPricingDataModel}" showNoData="true"
			threshold="1" enableBusyIndicator="true" visibleRowCount="1">
			<table:columns autoResizable="true">
				<table:Column width="9rem">
					<table:multiLabels>
					</table:multiLabels>
					<table:template>
						<Text text="Sub-total" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="9rem">
					<table:multiLabels>
						<Label text="Amount Total" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>ExtendedTotal}" wrapping="false"/>
					</table:template>
				</table:Column>
			
				<table:Column width="9rem">
					<table:multiLabels>
						<Label text="Grand Total After Discount" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>GrandTotalAfterDiscount}" wrapping="false"/>
					</table:template>
				</table:Column>
				
				<table:Column width="9rem">
					<table:multiLabels>
						<Label text="TCI Approved Amount Total" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>TCIApprovedAmtTotal}" wrapping="false"/>
					</table:template>
				</table:Column>
				<table:Column width="9rem">
					<table:multiLabels>
						<Label text="Labour Difference Total" textAlign="Center" width="100%"/>
					</table:multiLabels>
					<table:template>
						<Text text="{LocalDataModel>DifferenceTotal}" wrapping="false"/>
					</table:template>
				</table:Column>
			</table:columns>
		</table:Table>
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
			<Button class="sapUiTinyMarginBeginEnd" type="Back" press="onStep06Back" text="{i18n>Back}"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep06Next" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>