<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin clFormTitleGap">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="TCI Claim Number: {LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="TCI Claim #"/>
					<Text text="{HeadSetData>/NumberOfWarrantyClaim}"/>
					<Label text="VIN">
					<layoutData>
						<l:GridData span="XL3 L3"/>
					</layoutData>
					</Label>
					<Text text="{HeadSetData>/ExternalObjectNumber}"/>
					<core:Title text=""/>
					<Label text="Dlr. Claim #"/>
					<Text text="{HeadSetData>/ExternalNumberOfClaim}"/>
					<Label text="OFP">
						<layoutData>
							<l:GridData span="XL3 L4"/>
						</layoutData>
					</Label>
					<Text text="{HeadSetData>/OFP}"/>
					<core:Title text=""/>
					<Label text="RO #."/>
					<Text text="{HeadSetData>/RepairOrderNumberExternal}"/>
					<Label text="Op #."/>
					<Text text="{HeadSetData>/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="Repair Date"/>
					<Text
						text="{path:'HeadSetData>/RepairDate', type: 'sap.ui.model.type.Date', constraints: {displayFormat: 'Date' }, formatOptions: { style: 'medium', strictParsing: true , UTC: true}}"/>
					<Label text="Reg. Date"/>
					<Text text="{path:'HeadSetData>/RegDate'}"/>
					<core:Title text=""/>
					<Label text="Odometer"/>
					<Text text="{HeadSetData>/Odometer}"/>
					<Label text="Elapse"/>
					<Text text="{HeadSetData>/ElapsedMonths}"/>
					<core:Title text=""/>
					<Label text="Type"/>
					<Text text="{HeadSetData>/WarrantyClaimType}"/>
					<Label text="Status"/>
					<Text text="{HeadSetData>/ProcessingStatusOfWarrantyClm}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<!--<HBox justifyContent="End" width="100%">-->
		<!--<Button text="Add Part Line" type="Emphasized" press="onPressAddLabour"/>-->
		<!--	<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItemSublet"/>-->
		<!--</HBox>-->
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="" labelSpanXL="7" labelSpanL="7"
			labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="4">
			<f:content>
				<core:Title text=""/>
				<Button text="Add Sublet LIne" type="Emphasized" press="onPressAddSublet" enabled="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Update Sublet Line" press="onPressUpdateSublet" enabled="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Delete Sublet Line" type="Reject" press="onPressDeleteSublet" enabled="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
				<core:Title text=""/>
				<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItemSublet" enabled="{DateModel>/subletLine}">
					<layoutData>
						<l:GridData span="XL8 L8 "/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
		<l:Grid containerQuery="true" defaultSpan="XL10 L10 M12 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Center">
				<f:SimpleForm editable="true" width="90%" class="sapUiResponsiveMargin ClsubHeadingLineHeight" layout="ResponsiveGridLayout" title=""
					labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6"
					columnsL="6" columnsM="6">
					<f:content>
						<core:Title text=""/>
						<Label text="Line #*" textAlign="Left"/>
						<Text text=""/>
						<core:Title text=""/>
						<Label text="Sublet Type" textAlign="Left"/>
						<ComboBox required="true" items="{path:'LocalDataModel>/ClaimSubletCodeModel', type : 'sap.ui.model.type.String'}"
							selectedKey="{SubletDataModel>/SubletCode}" enabled="{DateModel>/subletLine}" filterSecondaryValues="true" showSecondaryValues="true">
							<core:ListItem text="{path:'LocalDataModel>Matnr'} - {path:'LocalDataModel>MaterialDesc'}" key="{LocalDataModel>Matnr}" additionalText="{LocalDataModel>UnitOfMeasure}"/>
						</ComboBox>
						<core:Title text=""/>
						<Label text="Invoice #" textAlign="Left"/>
						<Input value="{SubletDataModel>/InvoiceNo}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Description" textAlign="Left"/>
						<Input value="{SubletDataModel>/description}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Amount" textAlign="Left"/>
						<Input value="{SubletDataModel>/Amount}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Save Sublet" type="Emphasized" press="onPressSaveClaimItemSublet" enabled="{DateModel>/subletLine}">
							<!--<layoutData>-->
							<!--	<l:GridData span="XL10 L10 "/>-->
							<!--</layoutData>-->
						</Button>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm editable="true" class="sapUiResponsiveMargin" layout="ResponsiveGridLayout" title="" labelSpanXL="12" labelSpanL="12"
					labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="4">
					<f:content>
						<core:Title text=""/>
						<Label text="Attachments" textAlign="Left"/>
						<UploadCollection id="UploadSublet" change="onUplaodChange" uploadComplete="onSubletUploadComplete" fileDeleted="onFileDeleted02"
							 items="{ path: 'LocalDataModel>/SubletAtchmentData', templateShareable: false }">
							<toolbar>
								<OverflowToolbar>
									<Breadcrumbs id="breadcrumbsSupportingDoc02" currentLocationText="{LocalDataModel>/currentLocationText}" links="{LocalDataModel>/history}">
										<Link press="onBreadcrumbPress" text="{LocalDataModel>fileName}"/>
									</Breadcrumbs>
									<ToolbarSpacer/>
									<UploadCollectionToolbarPlaceholder/>
								</OverflowToolbar>
							</toolbar>
							<items>
								<UploadCollectionItem documentId="{LocalDataModel>DOC_ID}" fileName="{LocalDataModel>FileName}" mimeType="{LocalDataModel>MIMETYPE}"
									thumbnailUrl="{LocalDataModel>url}" url="{LocalDataModel>URI}" enableEdit="{settings>/enableEdit}" enableDelete="{settings>/enableDelete}"
									visibleDelete="{settings>/visibleDelete}" visibleEdit="{settings>/visibleEdit}">
									
								</UploadCollectionItem>
							</items>
						</UploadCollection>
						<core:Title text=""/>
						<Label text="# Days" textAlign="Left"/>
						<Input value="{SubletDataModel>/days}" enabled="{DateModel>/subletLine}"/>
						<core:Title text=""/>
						<Label text="Vehicle Brand" textAlign="Left"/>
						<Select forceSelection="false" selectedKey="{SubletDataModel>/brand}" enabled="{DateModel>/subletLine}">
							<items>
								<core:Item key="Toyota" text="Toyota"/>
								<core:Item key="Lexus" text="Lexus"/>
								<core:Item key="Other" text="Other"/>
							</items>
						</Select>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Cancel" type="Transparent" press="onPressSaveLabour" enabled="{DateModel>/subletLine}">
							<layoutData>
								<l:GridData span="XL9 L9 "/>
							</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<Table id="idSubletTable" mode="SingleSelectLeft" items="{path: 'LocalDataModel>/SubletPricingDataModel'}" growing="true"
			growingThreshold="5" noDataText="No Data" showNoData="true">
			<columns>
				<Column><Text text="Line #" textAlign="Center" width="100%"/></Column>
				<Column><Text text="Sublet Type*" textAlign="Center" width="100%"/></Column>
				<Column><Text text="Invoice #*" textAlign="Center" width="100%"/></Column>
				<Column><Text text="Attachment*" textAlign="Center" width="100%"/></Column>
				<Column><Text text="Description" textAlign="Center" width="100%"/>
					<footer><Text text="Sub-total : " textAlign="Center" width="100%"/></footer>
				</Column>
				<Column>
					<Text text="Amount*" textAlign="Center" width="100%"/>
					<footer><Text text="{path: 'LocalDataModel>/SubletPricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnAmountSublet'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="Total After Discount"/>
					<footer><Text text="{path: 'LocalDataModel>/SubletPricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnTotalSubletAfDisc'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="TCI Amount Approved"/>
					<footer><Text text="{path: 'LocalDataModel>/SubletPricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnTCISubletApr'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="Difference"/>
					<footer><Text text="{path: 'LocalDataModel>/SubletPricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnSubletDif'}" textAlign="Center" width="100%"/></footer>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{LocalDataModel>posnr}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>ItemKey}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>InvoiceNo}" wrapping="true" textAlign="Center" width="100%"/>
						<Link href="{LocalDataModel>URI}" text="View" target="_blank" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>SubletDescription}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>Amount}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>TotalAfterDisct}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>TCIApprAmt}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>DiffAmt}" wrapping="true" textAlign="Center" width="100%"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
			<Button class="sapUiTinyMarginBeginEnd" type="Back" press="onStep06Back" text="{i18n>Back}"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep06Next" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>