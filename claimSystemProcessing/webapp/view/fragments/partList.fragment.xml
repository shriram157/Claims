<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog noDataText="No data Found" title="{i18n>SelectPartNumber}" search="_handleValueHelpSearch" liveChange="_handleLiveSearch"
		confirm="_handleValueHelpClose" cancel="_handleValueHelpClose" items="{path:'/ZC_CLAIM_MATERIAL_DESC'}" growingThreshold="25" growing="true">
		<ColumnListItem>
			<cells>
				<Text text="{Material}"/>
				<Text text="{Description}"/>
				<Text text="{BaseUnit}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Material"/>
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Description"/>
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
				<header>
					<Text text="Unit"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>