<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:customPart="zclaimProcessing.control">
	<VBox class="sapUiSmallMargin clFormTitleGap">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="{LocalDataModel>/WarrantyClaimNumber}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="{i18n>TCIClaim}"/>
					<Text text="{HeadSetData>/NumberOfWarrantyClaim}"/>
					<Label text="{i18n>VIN}">
					<layoutData>
						<l:GridData span="XL3 L3"/>
					</layoutData>
					</Label>
					<Text text="{HeadSetData>/ExternalObjectNumber}"/>
					<core:Title text=""/>
					<Label text="{i18n>DlrClaim}"/>
					<Text text="{HeadSetData>/ExternalNumberOfClaim}"/>
					<Label text="{i18n>OFP}">
						<layoutData>
							<l:GridData span="XL3 L4"/>
						</layoutData>
					</Label>
					<Text text="{HeadSetData>/OFP}" id="idOFPart"/>
					<core:Title text=""/>
					<Label text="{i18n>RO}"/>
					<Text text="{HeadSetData>/RepairOrderNumberExternal}"/>
					<Label text="{i18n>Op}"/>
					<Text text="{HeadSetData>/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="{i18n>RepairDate}"/>
					<Text text="{path:'HeadSetData>/RepairDate', type: 'sap.ui.model.type.Date',  formatOptions: { style: 'medium', pattern: 'YYYY-MM-dd', strictParsing: true , UTC: true}}"/>
					<Label text="{i18n>RegDate}"/>
					<Text text="{path:'LocalDataModel>/DataVinDetails/RegDate', type: 'sap.ui.model.type.Date',  formatOptions: { style: 'medium', pattern: 'YYYY-MM-dd'}}"/>
					<core:Title text=""/>
					<Label text="{i18n>Odometer}"/>
					<Text text="{HeadSetData>/Odometer}"/>
					<Label text="{i18n>Elapse}"/>
					<Text text="{HeadSetData>/ElapsedMonths}"/>
					<core:Title text=""/>
					<Label text="{i18n>Type}"/>
					<Text text="{HeadSetData>/WarrantyClaimType}"/>
					<Label text="{i18n>Status}"/>
					<Text text="{HeadSetData>/ProcessingStatusOfWarrantyClm}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="" labelSpanXL="7" labelSpanL="7"
			labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="6">
			<f:content>
				<core:Title text=""/>
				<Button text="{i18n>AddPartLine}" press="onPressAddPart" enabled="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Button text="{i18n>UpdatePartLine}" press="onPressUpdatePart" enabled="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Button text="{i18n>DeletePartLine}" type="Reject" press="onPressDeletePart" enabled="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Button text="{i18n>GeneratePackingSlip}" press="onPressSuggestPart" enabled="{DateModel>/oFormEdit}"/>
				<core:Title text=""/>
				<Label text="{i18n>PartsMarkup}"/>
				<Text text="35%"/>
				<core:Title text=""/>
				<Button text="{i18n>SaveClaim}" type="Emphasized" press="onPressSavePart" enabled="{DateModel>/partLine}" />
			</f:content>
		</f:SimpleForm>
		<!--<HBox justifyContent="End" width="100%">-->
		<!--<Button text="Add Part Line" type="Emphasized" press="onPressAddLabour"/>-->
		<!--	<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItem"/>-->
		<!--</HBox>-->
		<l:Grid containerQuery="true" defaultSpan="XL10 L10 M12 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Center" visible="true">
				<f:SimpleForm editable="true" class="sapUiResponsiveMargin ClsubHeadingLineHeight" width="100%" layout="ResponsiveGridLayout" title=""
					labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="5"
					columnsL="5" columnsM="5">
					<f:content>
						<core:Title text=""/>
						<Label text="Line" textAlign="Left">
						<layoutData>
								<l:GridData span="XL3 L3 M6 "/>
							</layoutData>
						</Label>	
						<Text text="">
						<layoutData>
								<l:GridData span="XL3 L3 M6 "/>
							</layoutData>
						</Text>	
						<core:Title text=""/>
						<Label text="{i18n>PartNumber}" textAlign="Left"/>
						<Input value="{PartDataModel>/matnr}" required="true" id="idPartNumber" showValueHelp="true" valueHelpOnly="true"
							valueHelpRequest="handleValueHelp" enabled="{DateModel>/partLine}"/>
						<core:Title text=""/>
						<Label text="{i18n>PartDescription}" textAlign="Left"/>
						<Input value="{PartDataModel>/PartDescription}" editable="false" id="idPartDes"/>
						<!--<core:Title text=""/>-->
						<!--<Label text="{i18n>DealerNetPrice}" textAlign="Left"/>-->
						<!--<Input value="" editable="false"/>-->
						<core:Title text=""/>
						<Label text="{i18n>Quantity}" textAlign="Left"/>
						<customPart:CustomInput  value="{PartDataModel>/quant}" enabled="{DateModel>/partLine}"/>
						<Text text="{LocalDataModel>/BaseUnit}"/>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="{i18n>SavePart}" type="Emphasized" press="onPressSavePart" enabled="{DateModel>/partLine}">
							<!--<layoutData>-->
							<!--	<l:GridData span="XL10 L10 "/>-->
							<!--</layoutData>-->
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<Table id="idTableParts" mode="SingleSelectLeft" items="{path: 'LocalDataModel>/PricingDataModel'}" growing="true" growingThreshold="5" noDataText="No Data" showNoData="true">
			<columns>
				<Column><Text text="{i18n>Line}" textAlign="Center" width="100%"/></Column>
				<Column><Text text="{i18n>OFP}" textAlign="Center" width="100%"/></Column>
				<Column><Text text="{i18n>PartNumber}" textAlign="Center" width="100%"/></Column>
				<Column><Text text="{i18n>Description}" textAlign="Center" width="100%"/></Column>
				<Column>
					<Text text="{i18n>DealerNetPrice}" textAlign="Center" width="100%"/>
				</Column>
				<Column><Text text="{i18n>Quantity}" textAlign="Center" width="100%"/>
				<footer><Text text="{i18n>Subtotal}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column>
					<Text text="{i18n>ExtendedValue}" textAlign="Center" width="100%"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnSumExtendedVal'}" textAlign="Center" width="100%"/></footer>
					</Column>
				<Column>
					<Text text="{i18n>MarkupAmount}" textAlign="Center" width="100%"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnSumMarkUpVal'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column>
					<Text text="{i18n>AmountClaimed}" textAlign="Center" width="100%"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnAmountClaimVal'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="{i18n>TotalAfterDiscount}" textAlign="Center" width="100%"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnAfterDiscVal'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="{i18n>TCIQuantityApproved}" textAlign="Center" width="100%"/></Column>
				<Column><Text text="{i18n>TCIAmountApproved}" textAlign="Center" width="100%"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnTCIAmtVal'}" textAlign="Center" width="100%"/></footer>
				</Column>
				<Column><Text text="{i18n>Difference}"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnDiffVal'}" textAlign="Center" width="100%"/></footer>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<Text text="{LocalDataModel>posnr}" textAlign="Center" width="100%"/>
						<RadioButton groupName="A" id="idPartRadio" enabled="{DateModel>/oFormEdit}" select="onSelectOFP" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>matnr}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>PartDescription}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>DealerNet}" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>QtyHrs}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>ExtendedValue}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>MarkUp}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>AmtClaimed}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>TotalAfterDisct}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>TCIApprQty}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>TCIApprAmt}" wrapping="true" textAlign="Center" width="100%"/>
						<Text text="{LocalDataModel>DiffAmt}" wrapping="true" textAlign="Center" width="100%"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop">
			<Button class="sapUiTinyMarginBeginEnd" type="Back" press="onStep03Back" text="{i18n>Back}"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep03Next" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>