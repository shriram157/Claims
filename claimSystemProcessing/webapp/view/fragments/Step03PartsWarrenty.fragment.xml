<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table">
	<VBox class="sapUiSmallMargin clFormTitleGap">
		<Panel width="100%" class="sapUiSmallMarginBottom">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="TCI Claim Number: {LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
				adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="4"
				singleContainerFullSize="false">
				<f:content>
					<core:Title text=""/>
					<Label text="TCI Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/NumberOfWarrantyClaim}"/>
					<Label text="VIN"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalObjectNumber}"/>
					<core:Title text=""/>
					<Label text="Dlr. Claim #"/>
					<Text text="{LocalDataModel>/ClaimDetails/ExternalNumberOfClaim}"/>
					<Label text="OFP"/>
					<Text text="{LocalDataModel>/ClaimDetails/OFP}" id="idOFPart"/>
					<core:Title text=""/>
					<Label text="RO #."/>
					<Text text="{LocalDataModel>/ClaimDetails/RepairOrderNumberExternal}"/>
					<Label text="Op #."/>
					<Text text="{LocalDataModel>/ClaimDetails/MainOpsCode}"/>
					<core:Title text=""/>
					<Label text="Repair Date"/>
					<Text
						text="{path:'LocalDataModel>/ClaimDetails/RepairDate', type: 'sap.ui.model.type.Date', constraints: {displayFormat: 'Date' }, formatOptions: { style: 'medium', strictParsing: true , UTC: true}}"/>
					<Label text="Reg. Date"/>
					<Text text="{path:'LocalDataModel>/ClaimDetails/RegDate'}"/>
					<core:Title text=""/>
					<Label text="Odometer"/>
					<Text text="{LocalDataModel>/ClaimDetails/OdometerReading}"/>
					<Label text="Elapse"/>
					<Text text="{LocalDataModel>/ClaimDetails/ElapsedMonths}"/>
					<core:Title text=""/>
					<Label text="Type"/>
					<Text text="{LocalDataModel>/ClaimDetails/WarrantyClaimType}"/>
					<Label text="Status"/>
					<Text text="{LocalDataModel>/ClaimDetails/ProcessingStatusOfWarrantyClm}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<f:SimpleForm editable="true" class=" sapUiTinyMarginBottom" layout="ResponsiveGridLayout" title="" labelSpanXL="7" labelSpanL="7"
			labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6" columnsL="6" columnsM="6">
			<f:content>
				<core:Title text=""/>
				<Button text="Add Part Line" press="onPressAddPart"/>
				<core:Title text=""/>
				<Button text="Update Part Line" press="onPressUpdatePart"/>
				<core:Title text=""/>
				<Button text="Delete Part Line" type="Reject" press="onPressDeletePart"/>
				<core:Title text=""/>
				<Button text="Generate Packing Slip" press="onPressSuggestPart"/>
				<core:Title text=""/>
				<Label text="Parts Mark-up"/>
				<Text text="35%"/>
				<core:Title text=""/>
				<Button text="Save Claim" type="Emphasized" press="onPressSavePart" enabled="{DateModel>/partLine}"/>
			</f:content>
		</f:SimpleForm>
		<!--<HBox justifyContent="End" width="100%">-->
		<!--<Button text="Add Part Line" type="Emphasized" press="onPressAddLabour"/>-->
		<!--	<Button text="Save Claim" type="Emphasized" press="onPressSaveClaimItem"/>-->
		<!--</HBox>-->
		<l:Grid containerQuery="true" defaultSpan="XL10 L10 M10 S12">
			<VBox class="clBgColor" wrap="Wrap" displayInline="true" alignContent="Center" visible="true">
				<f:SimpleForm editable="true" class="sapUiResponsiveMargin ClsubHeadingLineHeight" width="90%" layout="ResponsiveGridLayout" title=""
					labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="6"
					columnsL="6" columnsM="3">
					<f:content>
						<core:Title text=""/>
						<Label text="Line #" textAlign="Left"/>
						<Text text=""/>
						<core:Title text=""/>
						<Label text="Part Number" textAlign="Left"/>
						<Input value="{PartDataModel>/matnr}" required="true" id="idPartNumber" showValueHelp="true" valueHelpOnly="true"
							valueHelpRequest="handleValueHelp" enabled="{DateModel>/partLine}"/>
						<core:Title text=""/>
						<Label text="Part Description" textAlign="Left"/>
						<Input value="" editable="false" id="idPartDes"/>
						<core:Title text=""/>
						<Label text="Dealer Net Price" textAlign="Left"/>
						<Input value="" editable="false"/>
						<core:Title text=""/>
						<Label text="Quantity" textAlign="Left"/>
						<Input value="{PartDataModel>/quant}" enabled="{DateModel>/partLine}"/>
						<Text text="{LocalDataModel>/BaseUnit}"/>
						<core:Title text=""/>
						<Label text=" " class="clTextIndent"/>
						<Button text="Save Part" type="Emphasized" press="onPressSavePart" enabled="{DateModel>/partLine}">
							<layoutData>
								<l:GridData span="XL10 L10 "/>
							</layoutData>
						</Button>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</l:Grid>
		<Table id="idTableParts" mode="SingleSelectLeft" items="{path: 'LocalDataModel>/PricingDataModel'}" growing="true" growingThreshold="5" noDataText="No Data" showNoData="true">
			<columns>
				<Column><Text text="Line #"/></Column>
				<Column><Text text="OFP"/></Column>
				<Column><Text text="Part Number"/></Column>
				<Column><Text text="Description"/></Column>
				<Column>
					<Text text="Dealer Net Price"/>
				</Column>
				<Column><Text text="Quantity"/>
				<footer><Text text="Sub-total : "/></footer>
				</Column>
				<Column>
					<Text text="Extended Value"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnSumExtendedVal'}"/></footer>
					</Column>
				<Column>
					<Text text="Mark-up Amount"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnSumMarkUpVal'}"/></footer>
				</Column>
				<Column>
					<Text text="Amount Claimed"/>
					<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnAmountClaimVal'}"/></footer>
				</Column>
				<Column><Text text="Total After Discount"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnAfterDiscVal'}"/></footer>
				</Column>
				<Column><Text text="TCI Quantity Approved"/></Column>
				<Column><Text text="TCI Amount Approved"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnTCIAmtVal'}"/></footer>
				</Column>
				<Column><Text text="Difference"/>
				<footer><Text text="{path: 'LocalDataModel>/PricingDataModel', formatter: 'zclaimProcessing.utils.formatter.fnDiffVal'}"/></footer>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{LocalDataModel>posnr}"/>
						<RadioButton groupName="A" id="idPartRadio" select="onSelectOFP"/>
						<Text text="{LocalDataModel>matnr}" wrapping="false"/>
						<Text text="{LocalDataModel>PartDescription}" wrapping="false"/>
						<Text text="{LocalDataModel>DealerNet}"/>
						<Text text="{LocalDataModel>PartQty}" wrapping="false"/>
						<Text text="{LocalDataModel>ExtendedValue}" wrapping="false"/>
						<Text text="{LocalDataModel>MarkUp}" wrapping="false"/>
						<Text text="{LocalDataModel>AmtClaimed}" wrapping="false"/>
						<Text text="{LocalDataModel>TotalAfterDisct}" wrapping="false"/>
						<Text text="{LocalDataModel>TCIApprQty}" wrapping="false"/>
						<Text text="{LocalDataModel>TCIApprAmt}" wrapping="false"/>
						<Text text="{LocalDataModel>DiffAmt}" wrapping="false"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
