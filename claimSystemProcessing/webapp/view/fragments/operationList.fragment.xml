<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Suggested Operations for OFP : ">
		<content>
			<Table mode="SingleSelectLeft" selectionChange="onSelectOperation" items="{ path : 'LocalDataModel>/SuggetionOperationListFiltered' }">
				<headerToolbar >
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="Add Selected Operation to Claim" enabled="{DateModel>/SuggestBtn}" type="Emphasized" press="handleConfirmLabour"/>
						<Button class="sapUiSmallMarginBeginEnd" type="Reject" text="Close" press="onCloseLabour"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<header>
							<Text text="Operation Number"/>
						</header>
					</Column>
					<Column width="12em">
						<header>
							<Text text="Operation Description"/>
						</header>
					</Column>
					<Column width="12em">
						<header>
							<Text text="Labour Hours"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem>
					<cells>
						<Text text="{LocalDataModel>J_3GKATNRC}"/>
						<Text text="{LocalDataModel>LTEXT}"/>
						<Text text="{LocalDataModel>TIME}"/>
					</cells>
				</ColumnListItem>
			</Table>
		</content>
	</Dialog>
</core:FragmentDefinition>