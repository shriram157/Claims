<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:custom="zclaimProcessing.control">
	<VBox class="sapUiSmallMargin clFormTitleGap" busy="{LocalDataModel>/oSavePartIndicator}" busyIndicatorDelay="100">
		<Panel width="auto" class="sapUiSmallMarginBottom" accessibleRole="Region">
			<headerToolbar>
				<Toolbar height="3rem">
					<Title text="{i18n>ClaimDetails}"/>
					<ToolbarSpacer/>
					<Title text="{i18n>ClaimNumber} : {HeadSetData>/NumberOfWarrantyClaim}" textAlign="End"/>
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="8" labelSpanL="8" labelSpanM="12" labelSpanS="12"
				emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="6">
				<f:content>
					<core:Title text=""/>
					<Label text="{i18n>TCIClaim}"/>
					<Text text="{HeadSetData>/NumberOfWarrantyClaim}"/>
					<core:Title text=""/>
					<Label text="{i18n>DealerInvoice}"/>
					<Text text="{HeadSetData>/ExternalNumberOfClaim}"/>
					<Label text="{i18n>DealerInvoiceDate}"/>
					<Text text="{HeadSetData>/ExternalNumberOfClaim}"/>
					<core:Title text=""/>
					<Label text="{i18n>Type}"/>
					<Text text="{HeadSetData>/WarrantyClaimType}"/>
					<Label text="{i18n>Status}"/>
					<Text text="{HeadSetData>/DecisionCode}"/>
					<core:Title text=""/>
					<Label text="{i18n>ClaimTypeDescription}"/>
					<Text text="{HeadSetData>/WarrantyClaimType}"/>
					<Label text="{i18n>StatusDescription}"/>
					<Text text="{HeadSetData>/DecisionCode}"/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<f:SimpleForm editable="" title="Competitor Information" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12"
			labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
			singleContainerFullSize="false">
			<f:content >
				<core:Title text=""/>
				<Label text="Rebate Amount"/>
				<Input maxLength="40" value="{path:'HeadSetData>/RebateAmount', type : 'sap.ui.model.type.String' }" editable="{DateModel>/oFormEdit}">
					<layoutData>
						<l:GridData span="XL4 L4 M6 S6"/>
					</layoutData>
				</Input>
				<Button text="Recalculate" class="sapUiSmallMarginEnd" type="Emphasized" press="onRecalculate">
					<layoutData>
						<l:GridData span="XL2 L2 M3 S6"/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
	</VBox>
	<VBox>
		<HBox alignContent="Center" justifyContent="Center" class="sapUiTinyMarginTop sapUiTinyMarginBottom">
			<Button class="sapUiTinyMarginBeginEnd" press="onPressBack" text="{i18n>Back}" type="Back"/>
			<Button class="sapUiTinyMarginBeginEnd" press="onStep03Next" enabled="{LocalDataModel>/step01Next}" text="{i18n>Next}" type="Emphasized"/>
		</HBox>
	</VBox>
	<!--<VBox width="100%" class="classCheck"></VBox>-->
</core:FragmentDefinition>