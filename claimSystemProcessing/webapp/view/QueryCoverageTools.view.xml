<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="zclaimProcessing.controller.QueryCoverageTools"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:uxap="sap.uxap"
	xmlns:table="sap.ui.table">
	<core:Fragment fragmentName="zclaimProcessing.view.fragments.ToolHeader" type="XML"/>
	<uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true">
		<uxap:sections>
			<uxap:ObjectPageSection title="{i18n>QuickCoverageTool}">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="">
						<uxap:blocks>
							<VBox>
								<MessageStrip id="idNewClaimMsgStrp" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" visible="false"></MessageStrip>
								<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="{i18n>EnterCoverageSearch}" labelSpanXL="4"
									labelSpanL="4" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
									columnsXL="3" columnsL="3" columnsM="1" singleContainerFullSize="false">
									<f:content>
										<core:Title text=""/>
										<Label text="{i18n>VIN}" textAlign="Begin" required="true"/>
										<Input value="" id='vin'/>
										<core:Title text=""/>
										<Label text="{i18n>Odometer}" textAlign="Begin" required="true"/>
										<Input value="" id='Odometer'/>
										<core:Title text=""/>
										<Button text="{i18n>Search}" press="onPressSearch" type="Emphasized"/>
										<Button text="{i18n>Reset}" press="onPressClear"/>
									</f:content>
								</f:SimpleForm>
								<f:SimpleForm id="vin_details" editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
									emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3">
									<f:content>
										<core:Title text=""/>
										<Label text="{i18n>Model}"/>
										<Text text="{Vehicleinfo>/VehicleDescription}"/>
										<Label text="{i18n>InServiceDate}"/>
										<Text text="{path:'Vehicleinfo>/RegDate',type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'MMMM d, y', strictParsing: false, relative: false }}"/>
										<Label text="{i18n>Age}"/>
										<Text text="{Vehicleinfo>/VehicleDays}"/>
										<core:Title text=""/>
										<Label text="{i18n>ModelYear}"/>
										<Text text=""/>
										<Label text="{i18n>WrittenOff}"/>
										<Text text="{Vehicleinfo>/WrittenOff}"/>
										<core:Title text=""/>
										<Label text="{i18n>ForeignVIN}"/>
										<Text text="{Vehicleinfo>/ForeignVIN}"/>
										<Label text="{i18n>SpecialVINReview}"/>
										<Text text="{Vehicleinfo>/SpecialVINReview}"/>
									</f:content>
								</f:SimpleForm>
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
					<uxap:ObjectPageSubSection >
						<uxap:blocks>
							<VBox>
								<table:Table id="idActiveAgreement" class="classRCPTable" selectionMode="Single" rows="{EcpSalesModel>/zc_ecp_agreement}" visibleRowCountMode="Auto"
									rowSelectionChange="onNavigate" selectionBehavior="Row" showNoData="true" threshold="20" enableBusyIndicator="true">
									<table:toolbar>
										<Toolbar>
											<Title text="{i18n>ActiveAgreeement}" level="H2"/>
										</Toolbar>
									</table:toolbar>
									<table:columns autoResizable="true">
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>ECPAgreement}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{EcpSalesModel>AgreementNumber}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>PlanCode}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{EcpSalesModel>PlanType}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>Status}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{EcpSalesModel>AgreementStatus}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>StatusDate}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{path:'EcpSalesModel>StatusDate' ,type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'MMMM d, y', strictParsing: false, relative: false }}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>ExpiryDate}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{path:'EcpSalesModel>AgreementthruDate' ,type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'MMMM d, y', strictParsing: false, relative: false }}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>ExpiryKM}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{path:'EcpSalesModel>RoadHazardExpiryDate' ,type:'sap.ui.model.type.DateTime', formatOptions: { pattern: 'MMMM d, y', strictParsing: false, relative: false }}" wrapping="false"/>
											</table:template>
										</table:Column>
									</table:columns>
								</table:Table>
								<table:Table class="classRCPTable" selectionMode="Single" rows="{ProssingModel>/zc_coverageSet}" visibleRowCountMode="Auto" id='ofptable' 
									selectionBehavior="Row" showNoData="true" threshold="20" enableBusyIndicator="true">
									<table:toolbar>
										<f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="6" labelSpanL="6" labelSpanM="12" labelSpanS="12"
											emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3">
											<f:content>
												<core:Title text=""/>
												<Label text="{i18n>PartOFP}" textAlign="Left" required="true"/>
												<Input value="" id='partofp' />
												<core:Title text=""/>
												<Label text="{i18n>MainOp}" textAlign="Left" required="true"/>
												<Input value="" id='mainop' />
												<core:Title text=""/>
												<Button text="{i18n>LookUp}" type="Emphasized" press="onPressLookUp">
													<layoutData>
														<l:GridData span="XL3 L3 "/>
													</layoutData>
												</Button>
											</f:content>
										</f:SimpleForm>
									</table:toolbar>
									<table:columns autoResizable="true">
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>PartOFP}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{ProssingModel>Part}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>PartDescription}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{ProssingModel>PartDes}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>MainOp}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{ProssingModel>MainOp}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>OperationDescription}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{ProssingModel>MainOpDes}" wrapping="false"/>
											</table:template>
										</table:Column>
										<table:Column width="17rem">
											<table:multiLabels>
												<Label text="{i18n>Coverage}" textAlign="Center" width="100%"/>
											</table:multiLabels>
											<table:template>
												<Text text="{ProssingModel>Coverage}" wrapping="false"/>
											</table:template>
										</table:Column>
									</table:columns>
								</table:Table>
								<!--<List headerText="{i18n>ImportantNotes}">-->
								<!--<DisplayListItem>-->
								<Title text="{i18n>ImportantNotes}" />
								
										<Text
											text="This Coverage Inquiry is based on the date that the search is being performed and assumed to be the Repair Date on Repair Order. If the Repair Date on the Repair Order is different, the Coverage Inquiry results could differ especially if the vehicle is close to coverage expiry. Always perform the inquiry on the actual Repair Date to ensure accuracy."/>
										<!--<DisplayListItem-->
										<Text
											text="This Coverage Inquiry is provided for the purpose of easily determining the claim coverage of a vehicle component/repair. Claim coverage is limited to an actual customer complaint as a result of a defect in material or workmanship. The inquiry and resultant coverage results does not constitute the approval or authorization of a claim. All policies and procedures as outlined in the Warranty and ECP Policies and Procedures Manual still apply. "/>
								<!--</DisplayListItem>-->
								<!--</List>-->
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>